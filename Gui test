-- RIGHT
local Right = Instance.new("Frame", Main)
Right.Size = UDim2.new(0.55,0,1,0)
Right.Position = UDim2.new(0.45,0,0,0)
Right.BackgroundTransparency = 1

local KeyTitle = Instance.new("TextLabel", Right)
KeyTitle.Size = UDim2.new(1,0,0,60)
KeyTitle.BackgroundTransparency = 1
KeyTitle.Text = "üîë KEY SYSTEM"
KeyTitle.TextColor3 = Color3.fromRGB(255,80,80)

local Box = Instance.new("TextBox", Right)
