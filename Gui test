--// SL HUB FULL KEY SYSTEM

local CorrectKey = "SL-2026"

local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "SL_HUB"

local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.new(0,350,0,420)
Main.Position = UDim2.new(0.5,-175,0.5,-210)
Main.BackgroundColor3 = Color3.fromRGB(25,25,25)
Main.Active = true
Main.Draggable = true
Instance.new("UICorner", Main)

-- Title
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1,0,0,40)
Title.BackgroundTransparency = 1
Title.Text = "SL HUB"
Title.TextColor3 = Color3.fromRGB(255,255,255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 16

-- Features
local Features = Instance.new("TextLabel", Main)
Features.Size = UDim2.new(0.45,0,1,0)
Features.Position = UDim2.new(0,5,0,50)
Features.BackgroundTransparency = 1
Features.TextXAlignment = Enum.TextXAlignment.Left
Features.TextYAlignment = Enum.TextYAlignment.Top
Features.Font = Enum.Font.GothamBold
Features.TextSize = 14
Features.Text = [[
üõ° SAFE
üëë GOOD SCRIPTS
üö´ ANTIBAN
üöÄ FAST EXECUTION
üí° EASY TO USE
üìâ NO LAG

üëª Made by SL_GHOST
]]

task.spawn(function()
	while true do
		for i=0,255,3 do
			Features.TextColor3 = Color3.fromHSV(i/255,1,1)
			task.wait(0.05)
		end
	end
end)

-- Right Frame
local Right = Instance.new("Frame", Main)
Right.Size = UDim2.new(0.55,0,1,0)
Right.Position = UDim2.new(0.45,0,0,0)
Right.BackgroundTransparency = 1

-- Key Box
local Box = Instance.new("TextBox", Right)
Box.Size = UDim2.new(0.9,0,0,35)
Box.Position = UDim2.new(0.05,0,0,50)
Box.PlaceholderText = "Enter Key..."
Box.BackgroundColor3 = Color3.fromRGB(35,35,35)
Box.TextColor3 = Color3.fromRGB(255,255,255)
Instance.new("UICorner", Box)

-- Verify
local Verify = Instance.new("TextButton", Right)
Verify.Size = UDim2.new(0.9,0,0,35)
Verify.Position = UDim2.new(0.05,0,0,90)
Verify.Text = "VERIFY KEY"
Verify.BackgroundColor3 = Color3.fromRGB(40,40,40)
Verify.TextColor3 = Color3.fromRGB(255,255,255)
Verify.Font = Enum.Font.GothamBold
Instance.new("UICorner", Verify)

-- Get Key
local GetKey = Instance.new("TextButton", Right)
GetKey.Size = UDim2.new(0.9,0,0,35)
GetKey.Position = UDim2.new(0.05,0,0,130)
GetKey.Text = "GET KEY"
GetKey.BackgroundColor3 = Color3.fromRGB(40,40,40)
GetKey.TextColor3 = Color3.fromRGB(255,255,255)
Instance.new("UICorner", GetKey)

GetKey.MouseButton1Click:Connect(function()
	setclipboard("SL-2026")
	GetKey.Text = "KEY COPIED"
end)

-- Scripts Frame
local Scripts = Instance.new("Frame", Right)
Scripts.Size = UDim2.new(1,0,1,0)
Scripts.BackgroundTransparency = 1
Scripts.Visible = false

local count = 0
local function NewButton(text,callback)
	count += 1
	local Btn = Instance.new("TextButton", Scripts)
	Btn.Size = UDim2.new(0.9,0,0,35)
	Btn.Position = UDim2.new(0.05,0,0,50+(count-1)*40)
	Btn.BackgroundColor3 = Color3.fromRGB(35,35,35)
	Btn.TextColor3 = Color3.fromRGB(255,255,255)
	Btn.Font = Enum.Font.GothamBold
	Btn.TextSize = 14
	Btn.Text = text
	Instance.new("UICorner", Btn)

	Btn.MouseButton1Click:Connect(callback)
end

-- Scripts Buttons
NewButton("üí™ Muscle Legends", function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/XMASFIRE/SL-HUB-D/refs/heads/main/SL%20HUB%20ML%20(1).txt"))()
end)

NewButton("üçé Blox Fruits", function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/XMASFIRE/SL-HUB-D/refs/heads/main/BloxFruits"))()
end)

NewButton("‚ö° Legends Of Speed", function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/XMASFIRE/SL-HUB-D/refs/heads/main/SL%20HUB%20LOS"))()
end)

NewButton("üåä Escape Tsunami", function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/XMASFIRE/SL-HUB-D/refs/heads/main/Tusnammi.txt"))()
end)

-- Anti AFK (no key)
NewButton("üõ° Anti AFK", function()
	loadstring(game:HttpGet("ANTIAFK_RAW_LINK"))()
end)

-- Verify Logic
Verify.MouseButton1Click:Connect(function()
	if Box.Text == CorrectKey then
		Box.Visible = false
		Verify.Visible = false
		GetKey.Visible = false
		Features.Visible = false
		Scripts.Visible = true
	end
end)
