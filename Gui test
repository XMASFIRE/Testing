MsgLabel.Text = ""
MsgLabel.TextColor3 = Color3.fromRGB(255,0,0)
MsgLabel.BackgroundTransparency = 1
MsgLabel.TextScaled = true

-- SCRIPTS FRAME
local Scripts = Instance.new("Frame", Right)
Scripts.Size = UDim2.new(1,0,0.55,0)
Scripts.Position = UDim2.new(0,0,0.2,0)
Scripts.BackgroundTransparency = 1
Scripts.Visible = false

local Layout = Instance.new("UIListLayout", Scripts)
Layout.Padding = UDim.new(0,6)

-- BUTTON CREATOR
local function NewScript(name,link)
    local btn = Instance.new("TextButton", Scripts)
    btn.Size = UDim2.new(0.8,0,0,40)
    btn.Position = UDim2.new(0.1,0,0,0)
    btn.Text = name
    btn.BackgroundColor3 = Color3.fromRGB(255,0,0)
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    Instance.new("UICorner", btn)

    btn.MouseButton1Click:Connect(function()
        Gui.Enabled = false
        loadstring(game:HttpGet(link))()
    end)
end

-- ANTI AFK RAW
local Anti = Instance.new("TextButton", Scripts)
Anti.Size = UDim2.new(0.8,0,0,40)
Anti.Position = UDim2.new(0.1,0,0,0)
Anti.Text = "ANTI AFK"
Anti.BackgroundColor3 = Color3.fromRGB(255,0,0)
Anti.TextColor3 = Color3.fromRGB(255,255,255)
Instance.new("UICorner", Anti)

Anti.MouseButton1Click:Connect(function()
    Anti.Text = "LOADING..."
    loadstring(game:HttpGet("ANTI_AFK_RAW_LINK"))()
    Anti.Text = "ANTI AFK LOADED"
end)

-- GAME SCRIPTS
NewScript("Muscle Legends","https://raw.githubusercontent.com/XMASFIRE/SL-HUB-D/refs/heads/main/SL%20HUB%20ML%20(1).txt")
NewScript("Blox Fruits","https://raw.githubusercontent.com/XMASFIRE/SL-HUB-D/refs/heads/main/BloxFruits")
NewScript("Legends Of Speed","LS_RAW_LINK")
NewScript("Escape Tsunami","https://raw.githubusercontent.com/XMASFIRE/SL-HUB-D/refs/heads/main/Tusnammi.txt")

-- KEY VERIFY
Verify.MouseButton1Click:Connect(function()
    if Box.Text == CorrectKey then
        Box.Visible = false
        Verify.Visible = false
        Discord.Visible = false
        GetKey.Visible = false
        KeyTitle.Text = "üî• SCRIPTS"
        Scripts.Visible = true
    else
        MsgLabel.Text = "Wrong key ‚ùå"
        MsgLabel.Visible = true
        task.delay(1,function()
            MsgLabel.Visible = false
        end)
    end
end)

-- GET KEY
GetKey.MouseButton1Click:Connect(function()
    setclipboard("SL-ML-2026")
    GetKey.Text = "KEY COPIED ‚úÖ"
end)

-- DISCORD
Discord.MouseButton1Click:Connect(function()
    setclipboard("https://discord.gg/yourserver")
    Discord.Text = "DISCORD LINK COPIED ‚úÖ"
end)
